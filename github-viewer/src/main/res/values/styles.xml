<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.HeaderText">
        <item name="android:textSize">22sp</item>
        <item name="android:lineSpacingMultiplier">1.4</item>
    </style>

    <style name="AppTheme.MediumText">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AppTheme.SmallText">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="AppTheme.ExtraSmallText">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="AppTheme.Paragraph" parent="AppTheme.SmallText">
        <item name="android:textSize">14sp</item>
        <item name="android:paddingTop">@dimen/gap_small</item>
        <item name="android:paddingBottom">@dimen/gap_small</item>
    </style>

</resources>
